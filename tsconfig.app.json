{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "es2018",
      "dom",
      "scripthost"
    ]
  }
}
